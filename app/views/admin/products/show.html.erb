<p style="color: green"><%= notice %></p>

<div class="container max-width">
  <div class="grid grid-cols-2 mb-4">
    <div class="text-2xl font-bold"><%= @product.name %></div>
    <div class="grid justify-self-end">
    <%= link_to "Edit this product", edit_admin_product_path(id: @product.id), class: "bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none" %>
    </div>
  </div>

  <div class="block max-w p-6 bg-white border border-gray-200 rounded-lg shadow-md mb-4">
    <%= render "product", product: @product %>
  </div>

  <div class="flex justify-center">
    <%= link_to "Back to products", admin_products_path, class: "bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none" %>
    <%= link_to "Delete this product", admin_product_path(id: @product.id), data: { "turbo-method": :delete }, method: :delete, class: "text-white bg-red-400 hover:bg-red-500 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none" %>
  </div>
</div>
