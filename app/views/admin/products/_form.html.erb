<%= form_with model: product, url: product.new_record? ? admin_products_path : admin_product_path(id: product.id), method: product.new_record? ? "POST" : "PATCH", class: "max-w-md mx-auto p-6" do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-2 mb-4">
    <%= form.label :name, class: "text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-2 mb-4">
    <%= form.label :description, class: "text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :description, class: "w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-2 mb-4">
    <%= form.label :price_subunit, class: "text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :price_subunit, class: "w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="grid grid-cols-2 mb-4">
    <%= form.label :price_currency, class: "text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :price_currency, class: "w-full px-3 py-2 border rounded focus:outline-none focus:border-blue-500" %>
  </div>

  <div class="flex justify-center">
    <%= link_to "Back to products", admin_products_path, class: "bg-gray-200 hover:bg-gray-300 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none" %>
    <%= form.submit class: "bg-emerald-300 hover:bg-emerald-500 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 focus:outline-none" %>
  </div>
<% end %>